{
  "manifest_version": 2,
  "name": "rWallet",
  "description": "rWallet is a smart account that empowers users to engage in safe and trutless NFT rental tx's.",
  "options_page": "options.html",
  "background": {
    "persistent": true,
    "scripts": ["ex_background.bundle.js"]
  },
  "browser_action": {
    "default_title": "Taho",
    "default_icon": "icon-34.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["ex_contentScript.bundle.js"]
    }
  ],
  "web_accessible_resources": ["popup.html", "*.js", "*.json"]
}
